// @import 'nib/vendor'
@import "simplegrid.styl"
vendor-prefixes = o ms moz webkit
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	ms-border-radius arguments
	o-border-radius arguments
	border-radius arguments
appearance()
	-webkit-appearance arguments
	-moz-appearance arguments
	ms-appearance arguments
	o-appearance arguments
	appearance arguments
box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	ms-box-shadow arguments
	o-box-shadow arguments
	box-shadow arguments
transform()
	-webkit-transform arguments
	-moz-transform arguments
	ms-transform arguments
	o-transform arguments
	transform arguments
body
	background-color #000
	font-family century gothic
*
	margin 0
.todo
	width 100%
.cabecera
	background-color #B7BCC0
	width 100%
	display inline-block
	padding 0px
.centro
	text-align center
.logo
	width 200px
	margin 0px auto
	padding 5px
	a
		text-decoration none
		img
			width 100%
.medio
	.imagen
		width 100%
		position absolute
	.login
		color #ffffff
		.entrar
			text-align center
			background-color: rgba(255, 255, 255, 0.3);
			border-radius: 5px
		.texte
			font-size 1.3em
		.nomb,.contra
			text-align left
		.letrapeque

		.text
			border:0px solid
			background-color transparent
		.input
			background-color transparent
			border 1px rgba(255, 255, 255, 0.45) solid
			color: #FFF
			padding: 5px
			font-size: 12px
			inline-block

		.tabla
			display block
			width: 80%
			margin: 0px auto
	.pgrid
		position relative
	.red
		position relative
		width 100px
		img
			width 100%
			position relative
.h1
	border-width thick
